{
  "name": "@hit/feature-pack-auth-core",
  "version": "2.0.1",
  "description": "Core authentication UI - login, signup, forgot password, email verification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./pages/*": {
      "types": "./dist/pages/*.d.ts",
      "import": "./dist/pages/*.js"
    }
  },
  "files": [
    "dist",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "lucide-react": "^0.400.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "@hit/sdk": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "hit",
    "feature-pack",
    "auth",
    "login",
    "signup"
  ],
  "license": "MIT"
}
